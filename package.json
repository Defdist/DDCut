{
  "name": "DDCut2",
  "version": "0.0.0",
  "description": "DDCut v2",
  "main": "ddcut.js",
  "private": true,
  "gypfile": false,
  "dependencies": {
    "bindings": "~1.3.1",
    "electron-log": "^3.0.5",
    "electron-titlebar": "0.0.3",
    "intro.js": "^2.9.3",
    "npm": "^6.10.1"
  },
  "scripts": {
    "configure": "run-script-os",
    "configure:win32": "mkdir build && cd build && mkdir win32 && cd win32 && cmake ../../src",
    "configure:darwin:linux": "mkdir build && cd build && mkdir darwin && cd darwin && cmake ../../src",
    "install": "run-script-os",
    "install:darwin:linux": "cd build/darwin && cmake --build . --config Release && copyfiles --flat ./bin/* ./Release/* ../../UI/app/Backend/",
    "install:win32": "cd build/win32 && cmake --build . --config Release && copyfiles --flat bin/release/* ../../UI/app/Backend/",
    "start": "electron ./UI",
    "dist": "node package.js",
    "publish": "node publish.js"
  },
  "devDependencies": {
    "copyfiles": "^2.0.0",
    "electron": "^4.0.0",
    "electron-packager": "^12.1.0",
    "node-cmake": "^2.5.1",
    "run-script-os": "^1.0.3"
  }
}
